<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.user.VehicleRegistrationListActivity">

    <RelativeLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/rel_VehicleRegistrationListActivity_EmptyList"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/drawable_circle_edge"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_VehicleRegistrationListActivity_Add_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_add_24" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="gone"
        android:id="@+id/rcl_VehicleRegistrationListActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <com.example.mylicenseregistry.widget.ContentButton
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:layout_below="@+id/rcl_VehicleRegistrationListActivity"
        android:id="@+id/btn_VehicleRegistrationListActivity_ListAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:button_style="B"
        app:text="@string/VehicleRegistrationRegisterActivity_ListAdd_Text"
        android:textAllCaps="false"
        android:textColor="@color/black"/>

</RelativeLayout>