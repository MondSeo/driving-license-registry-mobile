<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_DrivingLicenseDetailActivity_Front"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_DrivingLicenseDetailActivity_FrontImage"
            android:background="@drawable/drawable_circle_edge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_DrivingLicenseDetailActivity_Back"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/rel_DrivingLicenseDetailActivity_Front"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_DrivingLicenseDetailActivity_BackImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/drawable_circle_edge"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_DrivingLicenseDetailActivity_Back"
        android:layout_marginTop="30dp">

        <com.example.mylicenseregistry.widget.ContentButton
            android:id="@+id/btn_DrivingLicenseDetailActivity_Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            app:button_style="B"
            app:text="@string/Common_Save" />

        <com.example.mylicenseregistry.widget.ContentButton
            android:id="@+id/btn_DrivingLicenseDetailActivity_Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            app:button_style="B"
            app:text="@string/Common_Delete" />

    </LinearLayout>
</RelativeLayout>