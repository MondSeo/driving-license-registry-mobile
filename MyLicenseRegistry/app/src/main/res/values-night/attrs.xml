<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Test">
        <attr name="layout_change_flag" format="boolean" />
        <attr name="layout_set_flag" format="boolean" />
    </declare-styleable>
    <declare-styleable name="SwipeRevealLayout">
        <attr name="dragFromEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="DiscreteScrollView">
        <attr name="dsv_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <!--Content Button Type A-->
    <declare-styleable name="ContentButton">
        <attr name="text" format="string"/>
        <attr name="enabled" format="boolean"/>
        <attr name="button_style" format="enum">
            <enum name="A" value="0" />
            <enum name="B" value="1" />
            <enum name="C" value="2" />
        </attr>
    </declare-styleable>
    <!--공통 에디트 텍스트-->
    <declare-styleable name="CommonEditText">
        <attr name="titleText" format="string"/>
        <attr name="contentText" format="string"/>
        <attr name="hintText" format="string"/>
        <attr name="textColorHint" format="reference" />
        <attr name="maxLength" format="integer"/>
        <attr name="textViewMode" format="enum">
            <enum name="EditText" value="0" />
            <enum name="TextView" value="1" />
        </attr>
        <attr name="commonEditTextEnabled" format="boolean"/>
    </declare-styleable>

    <!--공통 Toggle Button -->
    <declare-styleable name="CommonToggleButton">
        <attr name="image" format="reference"/>
        <attr name="toggleButtonText" format="string"/>
        <attr name="toggleButtonSubText" format="string"/>
        <attr name="toggleButtonTextColor" format="reference" />
        <attr name="checked" format="boolean"/>
        <attr name="smallText" format="boolean"/>
    </declare-styleable>

    <!--공통 Toggle Button -->
    <declare-styleable name="VehicleStatusView">
        <attr name="errorImage" format="reference"/>
        <attr name="statusTitle" format="string"/>
        <attr name="statusDesc" format="string"/>
        <attr name="statusHideUnderline" format="boolean"/>
    </declare-styleable>

    <!--Zoom이미지뷰-->
    <declare-styleable name="ZoomImageView">
        <attr name="zoomable" format="boolean" />
        <attr name="translatable" format="boolean" />
        <attr name="restrictBounds" format="boolean" />
        <attr name="animateOnReset" format="boolean" />
        <attr name="doubleTapToZoom" format="boolean" />
        <attr name="doubleTapToZoomScaleFactor" format="float" />
        <attr name="autoCenter" format="boolean" />
        <attr name="minScale" format="float" />
        <attr name="maxScale" format="float" />
        <attr name="autoResetMode" format="enum">
            <enum name="UNDER" value="0" />
            <enum name="OVER" value="1" />
            <enum name="ALWAYS" value="2" />
            <enum name="NEVER" value="3" />
        </attr>
    </declare-styleable>

    <!--타임 피커-->
    <declare-styleable name="CustomTimePicker">
        <attr name="tenMinute" format="boolean"/>
    </declare-styleable>
</resources>
