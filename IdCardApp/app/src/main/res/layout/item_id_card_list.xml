<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="30dp">

    <RelativeLayout
        android:id="@+id/rel_Registry_Id_Card_Front"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_circle_edge"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/uploaded_id_card_front_image"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="fitCenter"
            android:background="@drawable/drawable_circle_edge"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lin_Registry_Id_Card_Front"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:src="@drawable/ic_baseline_add_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="@string/id_card_registry_front_text" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/rel_Registry_Id_Card_Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_Registry_Id_Card_Front"
        android:layout_marginTop="10dp"
        android:background="@drawable/drawable_circle_edge"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/uploaded_id_card_back_image"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="fitCenter"
            android:background="@drawable/drawable_circle_edge"
            android:clipToOutline="true"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lin_Registry_Id_Card_Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_registry_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:src="@drawable/ic_baseline_add_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="@string/id_card_registry_back_text" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
