<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/dialog_background"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_common_dialog"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel_CustomDialog_TopBar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/txt_CustomDialog_contentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/color_popup_title"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/dialog_content_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/color_popup_content"
                    android:autoLink="all"
                    android:gravity="center"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </RelativeLayout>
        <!--커스텀 레이아웃 들어갈 부분 -->
        <LinearLayout
            android:id="@+id/dialog_content_customview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:minHeight="120dp"
            android:orientation="vertical" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="@color/color_line_ffffff_e6e6e6"
            android:alpha="@integer/float_line_alpha"/>
        <!-- Bottom Layout -->
        <RelativeLayout
            android:id="@+id/rel_CustomDialog_BottomView"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <!--버튼2개 레이아웃-->
            <LinearLayout
                android:id="@+id/button2_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible">
                <Button
                    android:id="@+id/left_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:background="@color/background_common_dialog"
                    android:textColor="@color/text_common_dialog_button_left"
                    android:gravity="center"
                    android:visibility="gone"/>
                <View
                    android:id="@+id/view_CustomDialog_bottomDivider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_line_ffffff_e6e6e6"
                    android:alpha="@integer/float_line_alpha"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/right_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:background="@color/background_common_dialog"
                    android:textColor="@color/text_common_dialog_button_right"
                    android:gravity="center"
                    android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>