<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_background"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:minHeight="150dp"
        android:background="@color/background_common_dialog"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:orientation="vertical"
            android:layout_marginBottom="30dp"
            android:gravity="center">
            <TextView
                android:id="@+id/txt_CustomDialog_contentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/color_popup_title"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/dialog_content_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/color_popup_content"
                android:textColorLink="@color/color_line_08aee8_e52b4e"
                android:linksClickable="true"
                android:gravity="center"
                />

        </LinearLayout>

        <CheckBox
            android:id="@+id/dialog_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/chk_driving_license"
            android:text="@string/driver_license_popup_checkbox"
            android:textColor="@color/color_popup_checkbox"
            android:layout_marginBottom="10dp"
            android:layout_gravity="left"
            android:paddingLeft="7.3dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:visibility="gone"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_line_ffffff_e6e6e6"
            android:alpha="@integer/float_line_alpha"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <!--버튼1개 레이아웃-->
            <LinearLayout
                android:id="@+id/button1_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:visibility="gone">
                <Button
                    android:id="@+id/ok_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:background="@color/background_common_dialog"
                    android:textColor="@color/text_common_dialog_button_right"
                    android:gravity="center"/>
            </LinearLayout>
            <!--버튼2개 레이아웃-->
            <LinearLayout
                android:id="@+id/button2_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:visibility="visible">
                <Button
                    android:id="@+id/left_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:background="@color/background_common_dialog"
                    android:textColor="@color/text_common_dialog_button_left"
                    android:gravity="center"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_line_ffffff_e6e6e6"
                    android:alpha="@integer/float_line_alpha"/>
                <Button
                    android:id="@+id/right_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:background="@color/background_common_dialog"
                    android:textColor="@color/text_common_dialog_button_right"
                    android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>