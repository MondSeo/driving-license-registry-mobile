<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/driving_license_register_text"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="25sp"
        />

    <com.example.drivinglicenseupload.widget.ContentButton
        android:id="@+id/btn_driving_license_snap_shot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:button_style="B"
        app:text="@string/driving_license_snap_shot_text"
        />

    <com.example.drivinglicenseupload.widget.ContentButton
        android:layout_marginTop="10dp"
        android:id="@+id/btn_driving_license_find_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:button_style="B"
        app:text="@string/driving_license_find_gallery_text"
        />



</LinearLayout>