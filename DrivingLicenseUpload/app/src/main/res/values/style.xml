<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
		<item name="android:splitMotionEvents">false</item> <!-- 멀티터치 막기 -->
    </style>

    <style name="AppTheme.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="help_main_title_textview_style">
    	<item name="android:typeface">sans</item>
    	<item name="android:textSize">17.333sp</item>
    	<item name="android:textColor">#ffffffff</item>
    	<item name="android:textStyle">bold</item>
    </style>

    <style name="help_sub_title_textview_style">
    	<item name="android:typeface">sans</item>
    	<item name="android:textSize">14sp</item>
    	<item name="android:textColor">#ffffffff</item>
    	<item name="android:textStyle">bold</item>
    </style>

    <style name="help_title_textview_style">
    	<item name="android:typeface">sans</item>
    	<item name="android:textSize">17.333sp</item>
    	<item name="android:textColor">#ffffffff</item>
    	<item name="android:textStyle">bold</item>
    </style>

    <style name="help_info_title_textview_style">
    	<item name="android:typeface">sans</item>
    	<item name="android:textSize">13sp</item>
    	<item name="android:textColor">#ffffffff</item>
    	<item name="android:textStyle">bold</item>
    </style>


    <style name="help_info_textview_style">
    	<item name="android:typeface">sans</item>
    	<item name="android:textSize">13sp</item>
    	<item name="android:textColor">#ffffffff</item>
    </style>

    <style name="account_editview_style">
    	<item name="android:typeface">sans</item>
    	<item name="android:textSize">16.666sp</item>
    	<item name="android:paddingLeft">10dp</item>
    	<item name="android:paddingRight">10dp</item>
    	<item name="android:textColor">@color/edittext_account_text_</item>
    </style>

    <style name="login_editview_style">
    	<item name="android:typeface">sans</item>
    	<item name="android:singleLine">true</item>
    	<item name="android:textSize">16.666sp</item>
    	<item name="android:paddingLeft">10dp</item>
    	<item name="android:paddingRight">34dp</item>
    	<item name="android:textColor">@color/edittext_login_text_</item>
    </style>

    <style name="user_info_editview_style">
    	<item name="android:typeface">sans</item>
    	<item name="android:singleLine">true</item>
    	<item name="android:textSize">18.666sp</item>
    	<item name="android:paddingLeft">10dp</item>
    	<item name="android:paddingRight">10dp</item>
    	<item name="android:textColor">@color/edittext_login_text_</item>
    </style>

    <style name="sub_editview_style">
        <item name="android:typeface">sans</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16.666sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/edittext_input_text_</item>
    </style>

	<style name="update_notice_textview_style">
		<item name="android:typeface">sans</item>
		<item name="android:textSize">16.3sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#ffffffff</item>
		<item name="android:layout_centerHorizontal">true</item>
	</style>

	<style name="update_notice_store_btn_style">
		<item name="android:typeface">sans</item>
		<item name="android:textSize">19.5sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#0e344c</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:gravity">center</item>
	</style>

    <style name="VehicleStatusTab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

	<style name="LoginTab">
		<item name="android:layout_height">1dp</item>
		<item name="android:background">@drawable/line_selector_login_tab</item>
	</style>

	<style name="drawerTextAppearance">
		<item name="android:textColor">@color/color_line_08aee8_e52b4e</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="CustomerNavigationView" parent="Base.Theme.AppCompat">
		<item name="android:listDivider">@color/color_10ffffff_e6e6e6</item>
	</style>

	<style name="ThemeSwipeBack" parent="Theme.Swipe.Back">
	</style>

	<style name="Theme.Swipe.Back" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="CommonTab" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
		<item name="android:textSize">16sp</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:letterSpacing">-0.01</item>
		<item name="android:lineSpacingExtra">4.3sp</item>
	</style>

	<style name="TransparentTheme" parent="Theme.AppCompat.Dialog">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowFullscreen">false</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:backgroundDimEnabled">true</item>
	</style>

</resources>
